# Docker Compose Environment Variables
# Copy this file to .env and update with your actual values
# The .env file is gitignored and will not be committed to GitHub

# PostgreSQL Database Configuration
POSTGRES_DB=shopifyr
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Backend Database Connection (for Docker, use 'db' as hostname)
DB_URL=jdbc:postgresql://db:5432/shopifyr
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT Secret (use a strong random string in production)
APP_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits

# Email Configuration (for order notifications)
APP_MAIL_USER=your-email@gmail.com
APP_MAIL_PASSWORD=your-app-password
APP_MAIL_FROM=no-reply@example.com
APP_MAIL_ORDER_NOTIFY_TO=owner@example.com
